<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.ar.tempus.model">

    <class name="Comision" table="comision">
        <id name="comisionId" column="id"><generator class="identity"/></id>

        <list name="clases" cascade="all" fetch="join" lazy="false">
            <key column="comision_id" not-null="true"/>
            <list-index column="idx"/>
            <one-to-many class="ClaseHorario"/>
        </list>

        <many-to-one name="materia" class="Materia" column="materia_id"/>
    </class>

</hibernate-mapping>