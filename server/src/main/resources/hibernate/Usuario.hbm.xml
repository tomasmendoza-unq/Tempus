<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.ar.tempus.model">

    <class name="edu.ar.tempus.model.Usuario" table="usuario">

        <id name="id">
            <generator class="identity"/>
        </id>

        <property name="email" not-null="true" unique="true"/>
        <property name="password" column="password" not-null="true"/>
        <property name="nombre" column="nombre" not-null="true"/>
        <property name="apellido" column="apellido" not-null="true"/>
        <property name="telefono" column="telefono" not-null="true"/>

        <property name="enabled" column="enabled" not-null="true"/>
        <property name="role" column="role" type="edu.ar.tempus.model.Role"/>



    </class>
</hibernate-mapping>
